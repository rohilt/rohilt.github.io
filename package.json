{
  "name": "Rohil Tuli",
  "description": "This is my personal website.",
  "version": "0.0.1",
  "scripts": {
    "watch:tailwind": "postcss static/tailwind.css -o static/index.css -w",
    "build:tailwind": "cross-env NODE_ENV=production postcss static/tailwind.css -o static/index.css",
    "dev": "concurrently \"sapper dev\" \"yarn run watch:tailwind\"",
    "build": "yarn run build:tailwind && sapper build --legacy",
    "export": "sapper export --legacy",
    "start": "node __sapper__/build",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test": "run-p --race dev cy:run",
    "deploy": "npm run export && node ./scripts/gh-pages.js"
  },
  "dependencies": {
    "compression": "^1.7.1",
    "concurrently": "^5.3.0",
    "polka": "next",
    "postcss-cli": "^7.1.1",
    "sirv": "^1.0.0",
    "tailwindcss": "^1.7.5"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/runtime": "^7.0.0",
    "@rollup/plugin-babel": "^5.0.0",
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@rollup/plugin-replace": "^2.2.0",
    "gh-pages": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.3.4",
    "rollup-plugin-svelte": "^5.0.1",
    "rollup-plugin-terser": "^6.1.0",
    "sapper": "^0.28.0",
    "svelte": "^3.17.3"
  }
}
